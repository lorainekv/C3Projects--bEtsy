<h1>Add to cart </h1>

<h3><%= @product.name %></h3>

<% if flash.now[:error] %>
  <div class="alert alert-danger" role="alert">
    <%= flash.now[:error] %>
  </div>
<% end %>

<%= form_for @item do |f| %>
  <%= f.label :quantity %>
  <%= f.number_field :quantity, min: 0, max:"#{@stock}" %>

  <%= f.hidden_field  :product_id, :value => params[:product_id] %>
  <%= f.hidden_field  :user_id, :value => @merchant %>

  <%= f.submit "Add to Cart" %>
<% end %>
