<h1> Log In Page </h1>

<% if flash.now[:error] %>
  <div>
    <%=flash.now[:error] %>
  </div>
<%end%>

<%= form_for(:session, url: login_path) do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Sign In" %>
<% end %>
